<?xml version="1.0"?>

    <LinearLayout android:weightSum="1"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#333439"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:background="@drawable/andispy"
        android:layout_height="60dp"
        android:layout_width="200dp"
        android:layout_weight="0.13"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"/>

    <EditText android:background="@drawable/edit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter Name"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/edtName" />

    <EditText android:background="@drawable/edit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter Email Id"
        android:inputType="textEmailAddress"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/edtEmail" />



    <EditText android:background="@drawable/edit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter Phone No"
        android:inputType="phone"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/edtPhone" />

    <EditText android:background="@drawable/edit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/edtPass" />
    <EditText android:background="@drawable/edit"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Enter Confirm Password"
        android:inputType="textPassword"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:id="@+id/edtConfPass" />

    <Button android:background="#000000"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:text="Sign Up"
        android:onClick="onClick"
        android:id="@+id/btnSignup"
        android:textColor="#008000"/>

</LinearLayout>